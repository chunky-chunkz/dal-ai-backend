{
  "//": "Scripts for development, building, running and testing - type: module",
  "name": "chatbot-backend",
  "version": "1.0.0",
  "description": "Production-ready chatbot backend with Fastify and TypeScript",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest tests/answer.e2e.test.ts",
    "example": "node example.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t chatbot-backend .",
    "docker:run": "docker run -p 3000:3000 chatbot-backend",
    "clean": "rimraf dist",
    "check:llm": "tsx src/scripts/check-llm.ts",
    "eval": "tsx src/utils/eval.ts --endpoint=http://localhost:8080/api/answer --threshold=0.55 --limit=999",
    "eval:strict": "tsx src/utils/eval.ts --endpoint=http://localhost:8080/api/answer --threshold=0.55 --limit=999 --fail-under-acc=0.7",
    "eval:local": "tsx src/utils/eval.ts --endpoint=http://localhost:3000/api/answer --threshold=0.55 --limit=999",
    "eval:dev": "tsx src/utils/eval.ts --endpoint=http://localhost:3000/api/answer --threshold=0.55 --limit=10",
    "test:llm": "tsx src/test-llm.ts",
    "test:faq": "tsx src/test-faq-integration.ts",
    "test:rag": "tsx src/test-rag.ts",
    "test:answer": "tsx src/test-answer-service.ts",
    "test:routes": "tsx src/test-answer-routes.ts",
    "test:vector": "tsx src/test-vector-store.ts",
    "demo:rag": "tsx src/demo-rag.ts",
    "demo:vector": "tsx src/demo-vector-store.ts",
    "test:embeddings": "tsx src/test-embeddings.ts",
    "test:cache": "tsx src/test-answer-cache.ts",
    "test:service-cache": "tsx src/test-answer-service-cache.ts",
    "test:guardrails": "tsx src/test-guardrails.ts",
    "test:guardrails-integration": "tsx src/test-guardrails-integration.ts",
    "test:final": "tsx src/test-final-integration.ts",
    "test:controller": "tsx src/test-answer-controller.ts",
    "test:controller-unit": "tsx src/test-controller-unit.ts",
    "demo:controller": "tsx src/demo-answer-controller.ts",
    "test:e2e-simple": "tsx src/test-e2e-simple.ts",
    "lint:data": "tsx src/utils/dataset.lint.ts",
    "gen:eval-template": "tsx src/scripts/gen.eval.template.ts",
    "confusion": "tsx src/utils/confusion.ts",
    "test:enhanced-memory": "tsx src/memory/test-enhanced-system.ts",
    "demo:enhanced-memory": "tsx src/memory/demo-enhanced-system.ts",
    "test:memory-categorizer": "tsx src/memory/enhanced-categorizer.ts",
    "test:memory-consolidator": "tsx src/memory/consolidator.ts",
    "test:memory-learning": "tsx src/memory/adaptive-learning.ts",
    "test:memory-utils": "tsx src/memory/text-utils.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "chatbot",
    "fastify",
    "typescript",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^12.0.1",
    "@prisma/client": "^5.19.1",
    "@types/node-fetch": "^2.6.13",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.17.2",
    "argon2": "^0.40.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fastify": "^5.6.0",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.17",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "uuid": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "nock": "^14.0.10",
    "prisma": "^5.19.1",
    "supertest": "^6.3.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
