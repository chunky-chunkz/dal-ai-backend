{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",            // ESM-Modus erlaubt import.meta und top-level await
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests/**"]       // Tests aus dem Build ausschlie√üen
}
